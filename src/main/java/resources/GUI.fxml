<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<BorderPane fx:id="root" xmlns="http://javafx.com/javafx/17.0.6"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="client.GUIController">
    <center>
        <VBox alignment="CENTER" spacing="10">
            <TextArea fx:id="contentTextArea" promptText="Enter text..." wrapText="true" prefWidth="800" prefHeight="500"/>
            <ImageView fx:id="imageView" fitWidth="800" fitHeight="500"/>
        </VBox>
    </center>
    <bottom>
        <HBox alignment="CENTER" spacing="10">
            <Button fx:id="sendButton" text="Send" onAction="#sendButtonClicked"/>
            <Button fx:id="uploadImageButton" text="Upload Image" onAction="#uploadImageButtonClicked"/>

        </HBox>
    </bottom>
</BorderPane>
